#include <iostream>

int main() {
  
  double weight;
  int num;
  char planet;
  
  std::cout << "What is your earth weight?\n";
  std::cin >> weight;
  std::cout << "What planet do you want to fight on?\n";
  std::cin >> num;
	switch(num) {
    case 1 : {
      weight = 0.7 * weight;
      planet = "Venus";
    }
    case 2 : {
      weight = 0.39 * weight;
      planet = "Mars";
    }
    case 3 : {
      weight = 2.65 * weight;
      planet = "Jupiter";
    }
    case 4 : {
      weight = 1.17 * weight;
      planet = "Saturn";
    }
    case 5 : {
      weight = 1.05 * weight;
      planet = "Uranus";
    }
    case 6 : {
      weight = 1.23 * weight;
      planet = "Neptune";
    }
  }
  std::cout << "Your weight on " << planet << " is " << weight << ".\n"
  
}
